<UserControl
    x:Class="Overlisten.Controls.HeroCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Overlisten.Controls" MouseEnter="UserControl_MouseEnter"
    Cursor="Hand">

    <Border BorderThickness="2.5" BorderBrush="white" Margin="10,0,10,10" Width="170" Background="white">
        <DockPanel>
            <Image x:Name="Image_heroImg" Stretch="Uniform" DockPanel.Dock="Top" Height="200" Margin="0,-17,0,0"/>
            <TextBlock DockPanel.Dock="Bottom" Height="35" HorizontalAlignment="Center" VerticalContentAlignment="Center" 
                       VerticalAlignment="Center" Margin="0,0,0,0" Padding="0,0,0,10"
                       x:Name="TextBlock_heroName" FontSize="20" TextWrapping="Wrap" TextAlignment="Center"/>
        </DockPanel>
    </Border>
</UserControl>
