<UserControl
    x:Class="Overlisten.Controls.CategoryControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Overlisten.Controls" >
    
    <StackPanel>

        <StackPanel Orientation="Horizontal">
            <Image x:Name="img_dropDown" MouseLeftButtonDown="Image_ToggleSounds_MouseLeftButtonDown"  Cursor="Hand" Source="../assets/dropdown_closed.png" Width="50" Height="50" Stretch="Fill" Margin="40,10,0,0"/>
            <TextBlock Foreground="white" HorizontalAlignment="Left" FontSize="30" Height="50" VerticalAlignment="Center" Margin="10,15,0,0" Text="Nom de la catégorie" x:Name="TextBlock_CategoryName"/>
        </StackPanel>

        <StackPanel x:Name="StackPanel_sounds" Margin="0,10,0,0" Visibility="Collapsed">
            
        </StackPanel>
    </StackPanel>
</UserControl>
