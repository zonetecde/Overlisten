<UserControl
    x:Class="Overlisten.Controls.SoundControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Overlisten.Controls">

    <Border Background="#B3FFFFFF" BorderThickness="2" BorderBrush="black" CornerRadius="17">
        <StackPanel Orientation="Horizontal">
            <Image  Cursor="Hand" MouseLeftButtonDown="Image_play_MouseLeftButtonDown" Source="../assets/play.png" Width="30" Height="30" Margin="10,0,0,0" VerticalAlignment="Center"/>
            <Image  Cursor="Hand" MouseLeftButtonDown="Image_pause_MouseLeftButtonDown" Source="../assets/pause.png" Width="30" Height="30" Margin="10,0,0,0" VerticalAlignment="Center"/>
            <Image Visibility="Collapsed" Cursor="Hand" MouseLeftButtonDown="Image_download_MouseLeftButtonDown" Source="../assets/download.png" Width="30" Height="30" Margin="10,0,0,0" VerticalAlignment="Center"/>

            <TextBlock x:Name="TextBlock_subtitle" TextWrapping="Wrap" FontSize="22" Padding="10,5,15,5"/>
        </StackPanel>
    </Border>

</UserControl>
